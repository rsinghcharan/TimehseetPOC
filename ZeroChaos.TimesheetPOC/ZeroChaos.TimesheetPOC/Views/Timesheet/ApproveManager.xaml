<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ZeroChaos.TimesheetPOC.Views.Timesheet.ApproveManager">
    <ListView x:Name="approverlst" ItemSelected="approverlst_ItemSelected">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <StackLayout Orientation="Vertical">
                        <Label  TextColor="Black" Text="{Binding ManagerName}" HorizontalOptions="Start" VerticalTextAlignment="Center"/>
                        <Label IsVisible="False" Text="{Binding ManagerID}" />
                    </StackLayout>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>

    </ListView>
</ContentPage>