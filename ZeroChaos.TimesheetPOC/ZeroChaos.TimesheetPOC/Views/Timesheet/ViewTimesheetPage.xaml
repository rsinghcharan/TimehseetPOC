<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:controls="clr-namespace:ZeroChaos.TimesheetPOC.Controls"
             x:Class="ZeroChaos.TimesheetPOC.Views.Timesheet.ViewTimesheetPage">
    <StackLayout  >
	  <ContentView x:Name="PanelView"></ContentView>
		<ScrollView VerticalOptions="StartAndExpand"  >
		  <StackLayout Padding="10,0,0,0" HorizontalOptions="Start" VerticalOptions="Start">
		        <StackLayout VerticalOptions="Start" HorizontalOptions="Start">
		        <Label x:Name="lblResourceName" Style="form-label"  FontFamily="Bold" Text="ResuceName" ></Label>
				<Label x:Name="lblResourceNameValue" Style="data-label"  TextColor="Black" Text="ResouceValue"></Label>	
				<Label x:Name="lblProjectName" Style="form-label"  FontFamily="Bold" Text="Project Name" ></Label>
				<Label x:Name="lblProjectNameValue" Style="data-label"  TextColor="Black" Text="Project Valeu"></Label>
				<Label x:Name="lblEndDate" Style="form-label"  FontFamily="Bold" Text="Timesheet Ending Date" ></Label>
				<Label x:Name="lblEndValue" Style="data-label"  TextColor="Black" Text="Date"></Label>
					<Label x:Name="lblPo" Style="form-label"  FontFamily="Bold" Text="Po Number" ></Label>
				<Label x:Name="lblPoValue" Style="data-label"  TextColor="Black" Text="Po Value"></Label>
						<Label x:Name="sicktimebalanceLabel" Style="form-label"  FontFamily="Bold" Text="sicktimebalanceLabel" ></Label>
				<Label x:Name="sicktimebalanceValue" Style="data-label"  TextColor="Black" Text="sicktimebalanceValue"></Label>
					<Label x:Name="approvalManagerLabel" Style="form-label"  FontFamily="Bold" Text="approvalManagerLabel" ></Label>
				<Label x:Name="approvalManagerField" Style="data-label"  TextColor="Black" Text="approvalManagerField"></Label>
					<Label x:Name="lblID" Style="form-label"  FontFamily="Bold" Text="TimeSheet ID" ></Label>
				<Label x:Name="lblIDValue" Style="data-label"  TextColor="Black" Text="ID"></Label>

				</StackLayout>
				<StackLayout VerticalOptions="Start" x:Name="stckPayCode" HorizontalOptions="Start">
				<Label x:Name="lblHeader" Style="header"  FontFamily="Bold" Text="Reaguler Time " ></Label> 
					<Grid x:Name="grdPayCode">
						
					</Grid>
				 </StackLayout>
		  </StackLayout>
		</ScrollView>
		<StackLayout Padding="10,0,10,5" Spacing="0" x:Name="buttonBar" HorizontalOptions="FillAndExpand" Orientation="Horizontal" VerticalOptions="Center">
			<ContentView  HorizontalOptions="FillAndExpand" HeightRequest="40">
				 <controls:CustomButton Text="Save" Type="Orange" HorizontalOptions="Fill"/>
			</ContentView>
		 <ContentView  HorizontalOptions="FillAndExpand">
				 <controls:CustomButton Text="Submit"  HeightRequest="40"  HorizontalOptions="Fill"/>
		<!--  <Button  HeightRequest="40" Type HorizontalOptions="FillAndExpand"  BackgroundColor="#01446b" Text="submit"></Button> --></ContentView>
		</StackLayout>
	 <!--	<ContentView x:Name="ButtonBar" VerticalOptions="End" HorizontalOptions="Center" ></ContentView> -->
	</StackLayout>
</ContentPage>